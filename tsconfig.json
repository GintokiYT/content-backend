{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                     
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@/utils/*": ["./utils/*"],
      "@/models/*": ["./models/*"],
      "@/controllers/*": ["./controllers/*"],
      "@/middlewares/*": ["./middlewares/*"],
      "@/types/*": ["./types/*"]
    }                       
  }
}